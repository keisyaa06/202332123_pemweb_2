<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Laporan 2 - Pemrograman Web</title>
    <style>
        /* Style untuk judul utama */
        h1 {
            background-color: rgb(43, 11, 11); /* Warna latar belakang */
            color: rgb(255, 210, 221);          /* Warna teks */
            padding: 10px;          /* Spasi dalam */
            font-size: 2em;         /* Ukuran font besar */
        }

        /* Style untuk subjudul NIM */
        h2 {
            color: rgb(119, 86, 141);            /* Warna teks */
            font-size: 1.5em;       /* Ukuran font menengah */
        }

        /* Style paragraf biasa */
        p {
            font-size: 1.2em;       /* Ukuran font paragraf */
        }

        /* Class untuk highlight kata "ipsum" */
        .highlight-blue {
            background-color: rgb(196, 122, 150); /* Latar */
            color: white;           /* Teks  */
            font-style: italic;     /* Huruf miring */
        }

        /* Class untuk highlight kata "amet" */
        .highlight-yellow {
            background-color: rgb(145, 120, 211); /* Latar  */
            font-style: italic;       /* Huruf miring */
        }

        /* Style untuk link */
        a {
            font-weight: bold;        /* Teks tebal */
            font-size: 1.3em;         /* Ukuran font */
            color: rgb(151, 57, 57);             /* Warna teks */
            text-decoration: none;    /* Hilangkan garis bawah */
        }
    </style>
</head>
